{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
            {
                "name" :"client",
                "image" : "696515/multi-client",
                "hostname" :  "client",
                "essential" : false,
                "memory": 128
            },

            {
                "name" :"server",
                "image" : "696515/multi-server",
                "hostname" :  "api",
                "essential" : false,
                "memory": 128
            },

            {
                "name" :"nginx",
                "image" : "696515/multi-nginx",
                "hostname" :  "nginx",
                "essential" : true,
                "memory": 128
            },

            
            {
                "name" :"worker",
                "image" : "696515/multi-worker",
                "hostname" :  "worker",
                "essential" : true,
                "memory": 128,
                "portMappings" :[
                    {
                        "hostPort" :80,
                        "containerPort": 80
                    }
                ],

                "links" : ["client" , "server"]

            }

    ]
}